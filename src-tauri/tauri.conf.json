{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bongkow-dsk",
  "version": "0.2.2",
  "identifier": "com.bongkow-dsk.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "bongkow-dsk",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/note64.ico"
    ]
  },
  "plugins": {
    "tauri": {
      "allowlist": {
        "all": true,
        "fs": true,
        "shell": true
      }
    }
  }
  

}
